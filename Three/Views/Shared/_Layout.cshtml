<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@(ViewBag.Title ?? "asp.net core 3.0")</title>
    <environment include="Development">
        <link rel="stylesheet" asp-href-include="css/*" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" asp-href-include="css/*" />
    </environment>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <span class="h2">@ViewBag.Title</span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12"> @RenderBody()</div>
    </div>
</body>
</html>
